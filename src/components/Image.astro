---
import type { Image } from '@/types'
interface Props {
    img: Image
}
const { img } = Astro.props
---

<div class="flex flex-col">
<span class="">
    file:{' '}
    <a href={img.url} class="underline text-[#b3b8c3] hover:text-[#0c090a]">
        {img.fullname}
    </a>
    <br />
    ({img.size}, image/{img.ext.split('.').pop()})
    <hr />
</span>
<img class="max-h-48 max-w-full" src={img.url} />
</div>
