---
import type { Image } from '@/types'
interface Props {
    image: Image
}
const { image } = Astro.props
const imgId = `${image.filename}-id`
---

<div class="flex flex-col">
    <span class="">
        file:{' '}
        <a href={image.url} class="underline text-[#b3b8c3] hover:text-[#0c090a]">
            {image.fullname}
        </a>
        <br />
        ({image.size}, image/{image.ext.split('.').pop()})
        <hr />
        <img
            id={imgId}
            class="max-h-48 max-w-full"
            alt={image.accessibility.alt ?? ''}
            src={image.url}
            role={image.accessibility.role ?? 'img'}
            aria-describedby={image.accessibility.ariaDescribedby ?? ''}
            loading={image.accessibility.loading ?? 'lazy'}
        />
    </span>
</div>
