---
import type { Image as TImage } from '@/types'
import { Image as ImageAstro } from 'astro:assets'
interface Props {
    image: TImage
}
const { image } = Astro.props
const imgId = `${image.filename}-id`
---

<div class="flex flex-col">
    <span class="">
        file:{' '}
        <a href={image.url} class="underline text-[#b3b8c3] hover:text-[#0c090a]">
            {image.fullname}
        </a>
        <br />
        ({image.size}, image/{image.ext.split('.').pop()})
        <hr />
        <ImageAstro
            class="max-h-48 w-auto aspect-auto"
            style="object-fit: contain;"
            id={imgId}
            alt={image.accessibility.alt ?? ''}
            src={import(`/public/${image.url}`)}
            role={image.accessibility.role ?? 'img'}
            loading={image.accessibility.loading ?? 'lazy'}
            aria-describedby={image.accessibility.ariaDescribedby ?? ''}
        />
    </span>
</div>
