---
import type { Post } from '@/types'
import DefaultLayout from '@layouts/Root.astro'
import Image from '@components/Image.astro'
interface Props {
    details: Post
}
const { details } = Astro.props
---

<DefaultLayout>
    <div class="w-[80%] min-h-96 text-nat-white-c01 bg-neutral-800 mx-auto">
        <div class="float-left flex px-10 gap-x-2 pt-6">
            {details.globbedImgs.map((g) => <Image img={g} />)}
        </div>
        <div class="text-lg pt-6 mx-auto">
            <span class="text-[#a47996] font-bold">{details.author}</span>
            <span class="">{' '}-{' '}</span>
            <span class="">{details.title} - {details.dateObj.toLocaleString()}</span>
            <br />
        </div>
        <div class="p-10">
            <slot />
        </div>
    </div>
</DefaultLayout>
