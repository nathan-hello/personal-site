---
import PageHeader from "@components/PageHeader.astro";
---

<head>
  <style>
    b {
      font-weight: bold;
      color: #eeeeee;
    }
    body {
      background-image: url("/images/cyber.jpg");
      background-attachment: fixed;
    }

    .floaty {
      margin-left: 10%;
      margin-right: 10%;
      background-color: #171717;
      color: #b3b8c3;
      border-style: ridge;
      border: solid 2px #1e1e1e;
      padding: 10px;
      box-shadow: 0px 0px 55px 12px rgb(32, 0, 48);
    }

    input:checked + div {
      display: none;
    }
    .fixed {
      padding: 4px;
      position: fixed;
      bottom: 0px;
      right: 0px;
    }
  </style>
</head>
<body>
  <div id="top" class="floaty">
    <PageHeader>
      <b>
        <pre>
      __              __
     / / __          / /
    / / / /__   __  / / 
   / / / __/ | / / / /  
  / / / /_ | |/ / / /   
 /_/  \__/ |___/ /_/
                
            </pre>
      </b>
    </PageHeader>
    <hr />
    <a
      class="text-nat-white-c01 no-underline hover:text-nat-black-c01 hover:bg-nat-white-c01"
      href="#bottom"
    >
      [Bottom]
    </a>

    <br />
    <div>This page uses client side js, generated by the iframe tag.</div>
    <br />
    <div class="flex justify-center items-center">
      <iframe
        width="1280"
        height="720"
        allowfullscreen
        src="https://tv.reluekiss.com:8888/mystream/mystream"></iframe>
    </div>
    <p class="text-lg">
      If we're live, feel free to chat on our <b
        ><a
          href="/irc"
          class="text-nat-white-c01 hover:text-nat-black-c01 hover:bg-nat-white-c01"
          >irc</a
        ></b
      > server :)
    </p>
    <pre>
      _________________________________________________
     | Under construction, thank you for your patience |
      -------------------------------------------------
           /
    (\ /) /
    ( . .)
   c(")(")        
        </pre>
    <hr />
    <b>
      <a
        id="bottom"
        class="text-nat-white-c01 no-underline hover:text-nat-black-c01 hover:bg-nat-white-c01"
        href="#top"
      >
        [Top]
      </a>
    </b>
  </div>
</body>
