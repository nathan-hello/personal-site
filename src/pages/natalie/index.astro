---
import { globBlogs } from '@utils/glob'

import ForumPostCard from '@components/ForumPostCard.astro'
const recents = await globBlogs(50, 'natalie', true)
---

<head>
    <style>
        b {
            font-weight: bold;
            color: #eeeeee;
        }
        body {
            background-image: url('/images/cyber.jpg');
            background-attachment: fixed;
        }

        .floaty {
            margin-left: 10%;
            margin-right: 10%;
            background-color: #171717;
            color: #b3b8c3;
            border-style: ridge;
            border: solid 2px #1e1e1e;
            padding: 10px;
            box-shadow: 0px 0px 55px 12px rgb(32, 0, 48);
        }

        input:checked + div {
            display: none;
        }
        .fixed
        {
            position: fixed;
            bottom: 0px;
        }
    </style>
</head>
<body>
    <div id="top" class="floaty">
        <div>
