---
import { globBlogs, type RGlobBlogs } from "@utils/glob";
import type { GetStaticPaths } from "astro";
import NatalieBlogPost from "@layouts/natalie/BlogPost.astro";
import CommentSection from "@components/CommentSection.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const g = await globBlogs(undefined, "natalie", false);
  return g;
};

const props = Astro.props as RGlobBlogs["props"];
---
<NatalieBlogPost details={props.c}>
  <props.c.Component />
  <CommentSection id={props.c.id} />
</NatalieBlogPost>
