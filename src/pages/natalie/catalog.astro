---
import Meta from "@components/Meta.astro";

import PageHeader from "@components/PageHeader.astro";
---

<Meta title="catalog" description="Natalie's catalog" />
<head>
  <style>
    b {
      font-weight: bold;
      color: #eeeeee;
    }
    body {
      background-image: url("/images/cyber.jpg");
      background-attachment: fixed;
    }

    .floaty {
      margin-left: 10%;
      margin-right: 10%;
      background-color: #171717;
      color: #b3b8c3;
      border-style: ridge;
      border: solid 2px #1e1e1e;
      padding: 10px;
      box-shadow: 0px 0px 55px 12px rgb(32, 0, 48);
    }

    input:checked + div {
      display: none;
    }
    .fixed {
      padding: 4px;
      position: fixed;
      bottom: 0px;
      right: 0px;
    }
  </style>
</head>
