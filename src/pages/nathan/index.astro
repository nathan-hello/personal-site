---
import Layout from '@layouts/Root.astro'
import BlogImageBoard from '@components/BlogImageBoard.astro'
import { globBlogs } from '@utils/glob'

const recents = await globBlogs(10, 'nathan', true)
---

<Layout>
    {
        recents.map((a) => (
            <BlogImageBoard details={a.props.c}>
                <a.props.c.Component />
            </BlogImageBoard>
        ))
    }
</Layout>
