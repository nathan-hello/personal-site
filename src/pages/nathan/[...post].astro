---
import { globBlogs, type RGlobBlogs } from "@utils/glob";
import type { GetStaticPaths } from "astro";
import NathanBlogPost from "@layouts/nathan/BlogPost.astro";
import CommentSection from "@components/CommentSection.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const g = await globBlogs(undefined, "nathan", false);
  return g;
};

const props = Astro.props as RGlobBlogs["props"];
---

<NathanBlogPost details={props.c}>
  <props.c.Component />
  <CommentSection id={props.c.id} />
</NathanBlogPost>
