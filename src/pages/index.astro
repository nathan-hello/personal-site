---
import ForumPostCard from '@/components/ForumPostCard.astro'
import { globBlogs } from '@utils/glob'
import DefaultLayout from '@layouts/Root.astro'

const bothRecents = await globBlogs(100, undefined, true)
---

<DefaultLayout>
    {
        bothRecents.map((b) => {
            return (
                <ForumPostCard details={b.props.c}>
                    <b.props.c.Component />
                </ForumPostCard>
            )
        })
    }
</DefaultLayout>
